@model Games_Mvc.Models.Jogo

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Jogo</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Plataforma" class="control-label"></label>
                <input asp-for="Plataforma" class="form-control" />
                <span asp-validation-for="Plataforma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <input asp-for="Genero" class="form-control" />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImagemUrl" class="control-label"></label>
                <input asp-for="ImagemUrl" class="form-control" />
                <span asp-validation-for="ImagemUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h4>Personagens</h4>
                <hr />
                <div id="personagemContainer">
                    <div class="form-group">
                        <label>Nome do Personagem</label>
                        <input type="text" name="personagens[0].Nome" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Descrição do Personagem</label>
                        <textarea name="personagens[0].Descricao" class="form-control"></textarea>
                    </div>
                    <div class="form-group">
                        <label>Imagem URL do Personagem</label>
                        <input type="text" name="personagens[0].ImagemUrl" class="form-control" />
                    </div>
                </div>
                <button type="button" id="addPersonagem" class="btn btn-secondary">Adicionar Personagem</button>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<script>
    document.getElementById('addPersonagem').addEventListener('click', function () {
        var container = document.getElementById('personagemContainer');
        var index = container.children.length / 3; // Adjust for the number of fields
        var newField = `
                <div class="form-group">
                    <label>Nome do Personagem</label>
                    <input type="text" name="personagens[${index}].Nome" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Descrição do Personagem</label>
                    <textarea name="personagens[${index}].Descricao" class="form-control"></textarea>
                </div>
                <div class="form-group">
                    <label>Imagem URL do Personagem</label>
                    <input type="text" name="personagens[${index}].ImagemUrl" class="form-control" />
                </div>
            `;
        container.insertAdjacentHTML('beforeend', newField);
    });
</script>

